@model Faktura.Models.Racun

@{
    ViewBag.Title = "Details";
}

<div>
    <h3>Faktura broj: @Html.DisplayFor(model => model.BrojFakture)</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Izradio
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModifiedBy)
        </dd>

        <dt>
            Datum izrade
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateNow.Day).@Html.DisplayFor(model => model.DateNow.Month).@Html.DisplayFor(model => model.DateNow.Year).
        </dd>

        <dt>
            Datum dospijeća
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DatumDospijeca.Day).@Html.DisplayFor(model => model.DatumDospijeca.Month).@Html.DisplayFor(model => model.DatumDospijeca.Year).
        </dd>


    </dl>

    <hr />
    @if (Model.stavke.Count == 0)
    {

        <p>Nema stavki za prikaz</p>

    }
    else
    {
        foreach (var item in Model.stavke)
        {


            <dl class="dl-horizontal">
                <dt>
                    ->
                </dt>

                <dd>
                    <b>Opis stavke: </b>@Html.DisplayFor(modelItem => item.OpisProdaneStavke) <b>  Kolicina stavke: </b>   @Html.DisplayFor(modelItem => item.KolicinaProdaneStavke)kn <b> Cijena stavke bez poreza:</b> @Html.DisplayFor(modelItem => item.CijenaStavkeBezPoreza)kn <b> Ukupna cijena stavki bez poreza:</b> @Html.DisplayFor(modelItem => item.UkupnaCijenaStavkaBezPoreza)kn
                </dd>
            </dl>
        }
    }


    <hr />
    <dl class="dl-horizontal">
        <dt>
            Ukupna cijena bez poreza
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UkupnaCijenaBezPoreza)
        </dd>

        <dt>
            Ukupna cijena s porezom
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UkupnaCijenaSPorezom)
        </dd>

        <dt>
            Naziv primatelja računa
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NazivPrimateljaRacuna)
        </dd>

    </dl>


</div>
<hr />
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
